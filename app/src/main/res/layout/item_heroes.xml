<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_hero"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="15dp"
            android:scaleType="fitXY"
            android:src="@drawable/ahmad_dahlan" />

        <TextView
            android:id="@+id/tv_hero"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@id/iv_hero"
            android:text="AHMAD DAHLAN"
            android:textAlignment="center"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hero"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@id/iv_hero"
            android:hint="SHARE" />

        <Button
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_hero"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@id/btn_share"
            android:hint="DETILE" />


    </RelativeLayout>


</LinearLayout>